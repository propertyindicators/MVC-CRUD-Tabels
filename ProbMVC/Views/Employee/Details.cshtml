@model ProbMVC.Models.EmployeeModel

@{
	ViewBag.Title = "Employees";
}

@if (ViewBag.Error == null)
{
	<table>
		<thead />
		<tbody>
			<tr>
				<td>
					<h3>
						@Html.DisplayFor(model => model.Name)
					</h3>
				</td>
				<td>
					<input type="button" onclick="location.href='@Url.Action("Edit", new { Id = Model.Id })'" value="Edit" class="btn btn-default" style="margin-left:2em" />
					<input type="button" onclick="location.href='@Url.Action("Delete", new { Id = Model.Id })'" value="Delete employee" class="btn btn-warning" style="margin-left:2em" />
					<input type="button" onclick="location.href='@Url.Action("Index")'" value="Back to list" class="btn btn-default" style="margin-left:2em" />
				</td>
			</tr>

		</tbody>
	</table>

	<hr />
	<table>
		<thead />
		<tbody>
			<tr>
				<td>Position:</td>
				<td>@Html.DisplayFor(model => model.Position)</td>
			</tr>
			<tr>
				<td>Age:</td>
				<td>@Html.DisplayFor(model => model.Age) years old</td>
			</tr>
			<tr>
				<td>Salary:</td>
				<td>$@Html.DisplayFor(model => model.Salary)</td>
			</tr>
			<tr>
				<td>Started to work:</td>
				<td>@Html.DisplayFor(model => model.StartDate)</td>
			</tr>
		</tbody>
	</table>


	<style>
		td:first-of-type {
			text-align: right;
			font-weight: bold
		}

		td:last-of-type {
			padding-left: 1em
		}
	</style>
}
else
{
	<h2 class="text-danger">@ViewBag.Error</h2>

	<p>
		@Html.ActionLink("Go to employee list", "Index")
	</p>
}