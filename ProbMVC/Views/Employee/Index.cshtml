@model IEnumerable<ProbMVC.Models.EmployeeModel>

@{
	ViewBag.Title = "Employees";
}

<table>
	<thead />
	<tbody>
		<tr>
			<td>
				@Html.ActionLink("Create new employee", "Edit")
			</td>
			@if (ViewBag.HasLinkToRemoved)
			{
				<td>
					@Html.ActionLink("Removed employees", "Index", "EmployeeRemoved", null, new { style = "padding-left: 3em" })
				</td>
			}
		</tr>
	</tbody>
</table>
<br />
<div>
	<table id="maintab" class="display" style="width:100%">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Position)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Age)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StartDate)
				</th>
				<th>Operation</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Position)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Age)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.StartDate)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Details", "Details", new { id = item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.Id })
					</td>
				</tr>
			}

		</tbody>
		<tfoot>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Position)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Age)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StartDate)
				</th>
				<th>Operation</th>
			</tr>
		</tfoot>
	</table>
</div>
@Html.ActionLink("Create new employee", "Edit")

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/dataTables")
@Styles.Render("~/Content/dataTables")
@Scripts.Render("~/bundles/plaintabinit")
